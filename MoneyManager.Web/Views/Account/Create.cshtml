@model AccountDto

@{
    ViewBag.Title = "Create a new account";
}

<h1>Create a new account</h1>

<form asp-controller="Account" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Balance" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">â‚¬</span>
                </div>
                <input asp-for="Balance" value="0" asp-format="{0:#,###.00}" class="form-control" required>
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All">
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>