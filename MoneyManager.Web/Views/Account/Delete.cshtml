@model AccountDto

@{
    ViewBag.Title = "Delete";
}

<h1 class="title">Delete</h1>
<h3 class="subtitle">Are you sure you want to delete this account?</h3>
<div class="section">
    <h4>Account</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Balance
        </dt>
        <dd class="col-sm-10">
            @Model.InitialBalance
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="@Model.AccountId"/>
        <a asp-controller="Account" asp-action="Index">
            <svg class="bi bi-arrow-left" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M5.854 4.646a.5.5 0 0 1 0 .708L3.207 8l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z"/>
                <path fill-rule="evenodd" d="M2.5 8a.5.5 0 0 1 .5-.5h10.5a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
            </svg>
        </a> |
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
</div>