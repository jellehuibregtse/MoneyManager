@model AccountDto

@{
    ViewBag.Title = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this account?</h3>
<div>
    <h4>Account</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Balance
        </dt>
        <dd class="col-sm-10">
            @Model.InitialBalance
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="@Model.AccountId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-controller="Account" asp-action="Index">Return to overview</a>
    </form>
</div>