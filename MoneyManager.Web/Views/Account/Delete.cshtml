@model AccountDto

@{
    ViewBag.Title = "Delete";
}

<h1 class="title">Delete</h1>
<h3 class="subtitle">Are you sure you want to delete this account?</h3>
<div class="section">
    <h4>Account</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Balance
        </dt>
        <dd class="col-sm-10">
            @Model.InitialBalance
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="@Model.AccountId"/>
        <a asp-controller="Account" asp-action="Index" class="btn btn-secondary" role="button">
            Return to overview
        </a>
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
</div>