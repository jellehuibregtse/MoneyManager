@model AccountDto

@{
    ViewBag.Title = "Account Details";
}

@{
    Model.Transactions = ViewData["sort"] switch
    {
        "month" => Model.Transactions
            .Where(transaction => transaction.TransactionDate.Month.Equals(DateTime.Now.Month))
            .ToList(),
        "week" => Model.Transactions.Where(transaction =>
            Math.Abs(DateTime.Now.Day - transaction.TransactionDate.Day) < 7 &&
            transaction.TransactionDate.Month.Equals(DateTime.Now.Month))
            .ToList(),
        _ => Model.Transactions
        };

    Model.Transactions = Model.Transactions.OrderByDescending(transaction => transaction.TransactionDate).ToList();

}

<h1 class="title">Transactions</h1>

<div class="section btn-group my-1">
    <a asp-controller="Transaction" asp-action="Add" asp-route-accountId="@Model.AccountId" class="btn btn-outline-primary" type="button">
        Add Transaction
    </a>
</div>

<div class="section">
    <ul class="nav nav-pills nav-fill">
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Details" asp-route-id="@Model.AccountId" asp-route-sort="all" class="nav-link @(ViewData["sort"].ToString() == "all" || string.IsNullOrEmpty(ViewData["sort"].ToString()) ? "active" : "")">
                All Transactions
            </a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Details" asp-route-id="@Model.AccountId" asp-route-sort="month" class="nav-link @(ViewData["sort"].ToString() == "month" ? "active" : "")">
                This month
            </a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Details" asp-route-id="@Model.AccountId" asp-route-sort="week" class="nav-link @(ViewData["sort"].ToString() == "week" ? "active" : "")">
                This week
            </a>
        </li>

    </ul>
</div>
<div class="section table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Transaction</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <td>@transaction.TransactionDate.ToString()</td>
                <td>@transaction.Name</td>
                <td>&euro; @transaction.Amount</td>
                @if (transaction.Category != null && String.IsNullOrEmpty(transaction.Category.Name) == false)
                {
                    <td>@transaction.Category.Name</td>
                }
                else
                {
                    <td></td>
                }
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Transaction" asp-action="Details" asp-route-id="@transaction.Id"class="btn btn-secondary" role="button">
                            <svg class="bi bi-info-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z"/>
                                <circle cx="8" cy="4.5" r="1"/>
                            </svg>
                        </a>
                        <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@transaction.Id"class="btn btn-secondary" role="button">
                            <svg class="bi bi-pencil" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 0 1 1.414 0l2 2a1 1 0 0 1 0 1.414l-9 9a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z"/>
                                <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 0 0 .5.5H4v.5a.5.5 0 0 0 .5.5H5v.5a.5.5 0 0 0 .5.5H6v-1.5a.5.5 0 0 0-.5-.5H5v-.5a.5.5 0 0 0-.5-.5H3z"/>
                            </svg>
                        </a>
                        <a asp-controller="Transaction" asp-action="Delete" asp-route-id="@transaction.Id"class="btn btn-secondary" role="button">
                            <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}