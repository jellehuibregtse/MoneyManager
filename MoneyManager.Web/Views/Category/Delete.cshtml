@model CategoryDto

@{
    ViewBag.Title = "Delete";
}

<h1 class="title">Delete</h1>
<h3 class="subtitle">Are you sure you want to delete this category?</h3>
<div class="section">
    <h4>Category</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>

    <form method="post">
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" role="button">Return to overview</a>
        <input type="hidden" asp-for="@Model.CategoryId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
</div>