@model CategoryDto

@{
    ViewBag.Title = "Edit category";
}

<h1 class="title">Edit account</h1>

<form asp-controller="Category" asp-action="Edit" method="post" class="section mt-3">
    <div class="form-group row">
        <input hidden asp-for="CategoryId"/>
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="@Model.Name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    

    <div asp-validation-summary="All">
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </div>

</form>