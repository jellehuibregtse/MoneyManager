@model CategoryDto

@{
    ViewBag.Title = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Category" asp-action="Edit" asp-route-id="@Model.CategoryId">Edit</a> |
    <a asp-controller="Category" asp-action="Delete" asp-route-id="@Model.CategoryId">Delete</a> |
    <a asp-controller="Category" asp-action="Index">Return to overview</a>
</div>