@model TransactionDetailsDto

@{
    ViewBag.Title = @Model.PageTitle;
}

<h1>Details</h1>

<div>
    <h4>Transaction</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Transaction.Name
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Transaction.Amount
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@Model.Transaction.Id">Edit</a> |
    <a asp-controller="Transaction" asp-action="Delete" asp-route-id="@Model.Transaction.Id">Delete</a>
    <a asp-controller="Account" asp-action="Details" asp-route-id="@Model.Transaction.AccountId">Return to overview</a>
</div>